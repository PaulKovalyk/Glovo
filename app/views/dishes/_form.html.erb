<div class="container">

<%= form_with(model: @dish,url:restaurant_dishes_path(restaurant_id: @restaurant.id)) do |f| %>

 <div>
    <%= f.label :name, style: "display: block" %>
    <%= f.text_field :name%>
  </div>

  <div>
    <%= f.label :price, style: "display: block" %>
    <%= f.text_field :price, rows: 1 %>
  </div>

  <div>
    <%= f.label :weight, style: "display: block" %>
    <%= f.text_field :weight %>
  </div>
 
 <div>
    <%= f.label :status, style: "display: block" %>
  <%=f.select :category, Dish.categories.keys%>
  </div>

  <div>
    <%= f.submit %>
  </div>
<% end %> 
</div>
<% if @dish.errors.any? %>
   <%= binding.pry %>
