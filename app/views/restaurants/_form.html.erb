<div class="container_login">
  <h1 class="btn btn-primary btn-block btn-lg w-100 mt-2">New restaurant</h1>
  <%= form_with model: @restaurant do |f| %>
    <div>
     <%= f.label :name , class:"form-label"%>
      <%= f.text_field :name,class:"form-control " %>
    </div>
    <div>
       <%= f.label :description, class:"form-label"%>
      <%= f.text_area :description,class:"form-control " %>
    </div>
    <div>
      <%= f.label :address, class:"form-label"%>
      <%= f.text_field :address, class:"form-control " %>
    </div>
    <div>
      <%= f.label :tags, class:"form-label"%>
      <%= f.collection_select :tag_ids, @tags, :id,:title,{},multiple:  true , class: 'form-control col-sm-8' , style: 'width:100%'%>
    </div>
     <div class="mt-2">
       <%= f.label :photo_of_restaurant, class:"form-label"%>
      <%= f.file_field :image, class:"form-control " %>
    </div>
    <div class="mt-2">
      <%= image_tag(@restaurant.image_url, class:'image_size form-control ') if @restaurant.image?%>
    </div>
   <% if @restaurant.image_url %>
    <p>
      <label>
        <%= f.check_box :remove_image %>
        Remove image
      </label>
    </p>
    <% end %>
    <div>
      <%= f.submit :Save,class:'btn btn-info btn-block btn-lg w-100 mt-2'%>
    </div>
  <% end %>
</div>
