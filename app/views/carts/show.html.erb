<section class="h-100 h-custom" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col">
        <div class="card">
          <div class="card-body p-4">
            <div class="row">
              <div class="col-lg-7">
                <h5 class="mb-3"><a href="#!" class="text-body text-decoration-none">
                    <i class="fa fa-long-arrow-left me-2"></i>Continue ordering</a></h5>
                <hr>
                <div class="d-flex justify-content-between align-items-center mb-4">
                  <div>
                    <p class="mb-1">Ordering cart</p>
                    <p>You have <%=@cart.total_quantity%> items in your cart</p>
                  </div>
                </div>
                <% @cart.line_items.each do |item| %>
                  <div class="card mb-3">
                    <div class="card-body">
                      <div class="d-flex justify-content-between">
                        <div class="d-flex flex-row align-items-center">
                          <div>
                            <img
                            src="/assets/kfc.png"
                            class="img-fluid rounded-3" alt="Ordering item" style="width: 65px;">
                            </div>
                            <div>
                            
                             <div class="ms-3">
                              <h5><%= item.dish.restaurant.name %></h5>
                            </div>
                            <div class="ms-3">
                              <h5><%= item.quantity %> &times; <%= item.dish.name  %></h5>
                            </div>
                          
                          </div>
                          </div>
                          <div class="d-flex flex-row align-items-center">
                            <div style="width: 80px;">
                              <h5 class="mb-0"><%= number_to_currency(item.total_price) %></h5>
                            </div>
                            <a href="#!" style="color: #cecece;"><i class="fas fa-trash-alt"></i></a>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
                <div class="col-lg-5">
                  <div class="card bg-primary text-white rounded-3">
                    <div class="card-body">
                      <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="mb-0">Order details</h5>
                        <%= image_tag("/assets/credit-card.svg", style: 'width: 55px')%>
                      </div>
                      <div class="form-outline form-white mb-4">
                        <%= form_with model: @order do |f| %>
                          <div>
                            <%= f.text_field :name,class:"form-control form-control-lg",placeholder: "Name"%>
                            <%= f.label :name, class:"form-label"%>
                          </div>
                          <div>
                            <%= f.text_field :address,class:"form-control form-control-lg",placeholder: "Address"%>
                            <%= f.label :address, class:"form-label"%>
                          </div>
                          <div>
                            <%= f.text_field :email,class:"form-control form-control-lg",placeholder: "Email"%>
                            <%= f.label :email, class:"form-label"%>
                          </div>
                          <div>
                            <%= f.text_field :pay_type,class:"form-control form-control-lg",placeholder: "Pay type"%>
                            <%= f.label :pay_type, class:"form-label"%>
                          </div>
                          <hr class="my-4">
                          <div class="d-flex justify-content-between mb-4">
                            <p class="mb-2">Total</p>
                            <h6><%= number_to_currency((@cart.total_price), unit: "UAH", format: "%n %u") %></h6>
                          </div>
                          <%= f.submit :Checkout,class:'btn btn-info btn-block btn-lg w-100 mt-2'  %>
                        <% end %>
                      </div>
                      <%= button_to 'Empty cart',@cart, method: :delete,form: {data:{turbo_confirm:"Are you sure?"}},class:'btn btn-danger btn-block btn-lg w-100 mt-2' %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
