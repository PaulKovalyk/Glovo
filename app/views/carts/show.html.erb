<section class="h-100 h-custom" style="background-color: #eee;">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col">
        <div class="card">
          <div class="card-body p-4">
            <div class="row">
              <div class="col-lg-7">
                <h5 class="mb-3"><a>
                    <i class="fa fa-long-arrow-left me-2"></i><%= link_to 'Continue ordering', :back%></a></h5>
                <hr>
                <div class="d-flex justify-content-between align-items-center mb-4">
                  <div>
                    <p class="">Ordering cart</p>
                    <p>You have <%=@cart.total_quantity%> items in your cart</p>
                    <p class='text-primary'>You can cancel your order if it was placed less than 5 minutes ago</p>
                  </div>
                </div>
                <% @cart.line_items.each do |item| %>
                  <div class="card mb-3">
                    <div class="card-body">
                      <div class="d-flex justify-content-between">
                        <div class="d-flex flex-row ">
                          <div>
                            <img
                            src="/assets/kfc.png"
                            class="img-fluid rounded-3" alt="Ordering item" style="width: 65px;">
                            </div>
                            <div>
                              <div class="ms-3">
                                <h5><%= item.dish.restaurant.name %></h5>
                              </div>
                              <div class="ms-3">
                                <h5><%= item.quantity %> &times; <%= item.dish.name  %></h5>
                              </div>
                            </div>
                          </div>
                          <div class="d-flex flex-row align-items-center">
                            <div style="width: 100px;">
                              <h5 class="mb-0"><%= number_to_currency(item.total_price) %></h5>
                              <%= button_to "Delete", item,  method: :delete ,class:'btn btn-danger mt-2'%>
                            </div>
                            <a href="#!" style="color: #cecece;"><i class="fas fa-trash-alt"></i></a>
                          </div>
                        </div>
                      </div>
                    </div>
                  <% end %>
                </div>
                <div class="col-lg-5">
                  <div class="card bg-primary text-white rounded-3">
                    <div class="card-body">
                      <div class="d-flex justify-content-between align-items-center mb-4">
                        <h5 class="mb-0">Order details</h5>
                        <%= image_tag("/assets/credit-card.svg", style: 'width: 55px')%>
                      </div>
                      <div class="form-outline form-white mb-4">
                        <%= render 'form' %>
                      </div>
                      <%= button_to 'Empty cart',@cart, method: :delete,form: {data:{turbo_confirm:"Are you sure?"}},class:'btn btn-danger btn-block btn-lg w-100 mt-2' %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
